<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity"
    android:screenOrientation="portrait">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="5dp" />


    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btmBarImg1"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:layout_gravity="center"
            android:src="@drawable/money_stack_ico"/>

        <TextView
            android:id="@+id/btmBarLeftLbl"
            android:layout_width="0px"
            android:layout_height="60dp"
            android:layout_weight="14"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|left"
            android:text=" Left: $"
            android:textColor="@color/textColorLog"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btmBarAmountLeft"
            android:layout_width="0px"
            android:layout_height="60dp"
            android:layout_weight="20"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|left"
            android:text="2"
            android:textColor="@color/textColorLog"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btmBarImg2"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:layout_gravity="center"
            android:src="@drawable/money_stack_ico"/>

        <TextView
            android:id="@+id/btmBarTxtView2"
            android:layout_width="0px"
            android:layout_height="60dp"
            android:layout_weight="16"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|left"
            android:text="Total: $"
            android:textColor="@color/textColorLog"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btmBarAmountTotal"
            android:layout_width="0px"
            android:layout_height="60dp"
            android:layout_weight="20"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|left"
            android:text="2"
            android:textColor="@color/textColorLog"
            android:textSize="18sp" />


    </LinearLayout>




</android.support.constraint.ConstraintLayout>