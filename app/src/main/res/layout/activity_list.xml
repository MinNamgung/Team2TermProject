<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity"
    android:screenOrientation="portrait">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="60dp"
        android:dividerHeight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/listViewToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- text = Title of activity -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Template Activity"
                    android:textColor="@color/textColorLog"
                    android:textSize="24sp" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="15"
                android:src="@drawable/money_stack_ico" />

            <TextView
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_weight="14"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|left"
                android:text=" Left: $"
                android:textColor="@color/textColorLog"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btmBarAmountLeft"
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_weight="20"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|left"
                android:text="2"
                android:textColor="@color/textColorLog"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="15"
                android:src="@drawable/money_stack_ico" />

            <TextView
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_weight="16"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|left"
                android:text="Total: $"
                android:textColor="@color/textColorLog"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btmBarAmountTotal"
                android:layout_width="0px"
                android:layout_height="60dp"
                android:layout_weight="20"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|left"
                android:text="2"
                android:textColor="@color/textColorLog"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>







</android.support.constraint.ConstraintLayout>